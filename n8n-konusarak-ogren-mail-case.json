        "functionCode": "\nlet data = $json;\nif (data.data && typeof data.data === 'object') data = data.data;\nconst subject = data.subject || 'Teklifimiz Hakkında';\nlet html = (data.html || '').replace('{{ $json.clickUrl }}', $json.clickUrl);\nhtml += `<img src=\"${$json.openPixel}\" width=\"1\" height=\"1\" style=\"display:none;\" />`;\nreturn { json: { ...$json, subject, html } };\n"
