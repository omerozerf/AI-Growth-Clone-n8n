      "parameters": {
        "functionCode": "\nconst name = $json.Name || '';\nconst email = $json.Email || '';\nconst messageType = $json.messageType || 'Day0_Other';\nconst mid = (Math.random().toString(36).slice(2) + Date.now().toString(36)).slice(0, 16);\nconst host = 'https://your-n8n-host';\nconst targetUrl = 'https://konusarakogren.com/?utm_source=email&utm_medium=automation&utm_campaign=ai-growth';\nconst openPixel = `${host}/webhook/open?mid=${mid}&email=${encodeURIComponent(email)}&type=${encodeURIComponent(messageType)}`;\nconst clickUrl = `${host}/webhook/click?mid=${mid}&email=${encodeURIComponent(email)}&type=${encodeURIComponent(messageType)}&url=${encodeURIComponent(targetUrl)}`;\nreturn { json: { ...$json, trackingId: mid, openPixel, clickUrl } };\n"
      },
